# Sora API 配置
SORA_API_BASE_URL=https://sora.xmanx.com
SORA_API_KEY=your_api_key_here

# 目录配置
INPUT_DIR=./Input
OUTPUT_DIR=./Output
LOGS_DIR=./logs
DATA_DIR=./data

# 批处理配置
BATCH_SIZE=5
MAX_CONCURRENT=3
RETRY_COUNT=3
RETRY_DELAY=5000

# API 配置
API_TIMEOUT=300000
API_RETRY_COUNT=3
API_RETRY_DELAY=5000

# 文件监控配置
WATCH_DEBOUNCE_MS=2000
MAX_FILE_SIZE=524288000

# 日志配置
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# 服务器配置
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# 数据库配置
DB_PATH=./data/database.db

# 清理配置
CLEANUP_OLDER_THAN_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# 开发环境配置
NODE_ENV=development