{
  "name": "sora-watermark-remover",
  "version": "1.0.0",
  "description": "Automated video watermark removal tool using SoraWatermarkCleaner API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch src/server --exec node src/server/index.js",
    "dev:client": "vite --config vite.config.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node src/server/index.js",
    "start:oneclick": "bash scripts/start-and-open.sh",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop sora-watermark-remover",
    "pm2:restart": "pm2 restart sora-watermark-remover",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "db:init": "node scripts/init-database.js",
    "logs": "pm2 logs sora-watermark-remover",
    "monitor": "pm2 monit"
  },
  "keywords": [
    "sora",
    "watermark",
    "removal",
    "video",
    "automation",
    "api"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-type": "^18.7.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "p-limit": "^4.0.0",
    "p-queue": "^7.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "puppeteer": "^24.29.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.17.1",
    "npm": ">=9.0.0"
  }
}
